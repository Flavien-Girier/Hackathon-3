{% extends 'base.html.twig' %}


{% block body %}

    <div class="container apartment text-center marginTopHeader">

        <div class="textBigger mt-3">
            <div class="card border-info mb-3">
                <div class="card-header">
                    <h4>Mon profil</h4>
                </div>
                <h1>Bonjour {{ app.user.profil.firstName | default}}</h1>
                <div class="card-body text-info">
                    <img src=" {{ app.user.profil.firstName | default}}">
                </div>

                <div>
                    <a class="btn btn-success ml-auto m-2"
                       href="{{ path('back.user.edit', { 'profil_id': user.id }) }}"><span class="fas
fa-plus-square mr-2"></span>Modifier votre profil</a>
                </div>
                <div>
                    <a class="btn btn-success ml-auto m-2"
                       href="{{  path('back.skill') }}"><span class="fas fa-plus-square mr-2"></span>Ajouter une compétence à mon profil</a>
                </div>
                <div>
                    <a class="btn btn-success ml-auto m-2"
                       href="{{  path('project_add') }}"><span class="fas fa-plus-square mr-2"></span>Ajouter un projet à votre portfolio</a>
                </div>
                <div>
                    <a class="btn btn-success ml-auto m-2"
                       href="{{  path('back.experiences') }}"><span class="fas fa-plus-square mr-2"></span>Ajouter une expérience à mon profil</a>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
